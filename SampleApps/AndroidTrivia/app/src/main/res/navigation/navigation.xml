<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.stephan.androidtrivia.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.stephan.androidtrivia.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/fragment_game"
        >
        <action
            android:id="@+id/action_gameFragment_to_gameOverFragment3"
            app:destination="@id/gameOverFragment3"
            app:popUpTo="@+id/gameFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_gameFragment_to_gameWonFragment2"
            app:destination="@id/gameWonFragment2"
            app:popUpTo="@+id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/gameWonFragment2"
        android:name="com.stephan.androidtrivia.GameWonFragment"
        android:label="fragment_game_won"
        tools:layout="@layout/fragment_game_won" />
    <fragment
        android:id="@+id/gameOverFragment3"
        android:name="com.stephan.androidtrivia.GameOverFragment"
        android:label="fragment_game_over"
        tools:layout="@layout/fragment_game_over" >
        <action
            android:id="@+id/action_gameOverFragment3_to_titleFragment2"
            app:destination="@id/titleFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.stephan.androidtrivia.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.stephan.androidtrivia.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules" />
    <fragment
        android:id="@+id/XMLPullFragment"
        android:name="com.stephan.androidtrivia.xmlpull_parser.XMLPullFragment"
        android:label="XMLPullFragment"
        tools:layout="@layout/fragment_xml_parser"
        />
    <fragment
        android:id="@+id/myNewFragment"
        android:name="com.stephan.androidtrivia.MyNewFragment"
        android:label="MyNewFragment"
        tools:layout="@layout/fragment_my_new"
        />
</navigation>
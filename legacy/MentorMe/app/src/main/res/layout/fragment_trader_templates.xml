<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_temp_trader_img"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/robertkiyosaki"
        />

    <TextView
        android:id="@+id/id_temp_trader_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trader_name"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_temp_trader_img"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_temp_trader_name"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/id_trader_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
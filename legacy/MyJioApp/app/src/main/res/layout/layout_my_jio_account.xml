<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/id_layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_my_account"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="05dp"
            android:paddingRight="05dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/round_rectangle_shape_red"
            >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_done_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jio Prime"
            android:textSize="12dp"
            android:textColor="@android:color/white"
             />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_layout_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_below="@id/id_layout_one"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="6125647892"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recharge"
                android:textColor="@android:color/white"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textAllCaps="false"
                android:background="@drawable/round_rectangle_shape"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Prepaid VoLTE"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Used on ViVo"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

    </LinearLayout>


        <Button
            android:layout_toEndOf="@id/id_layout_two"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge"
            android:textColor="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAllCaps="false"
            android:background="@drawable/round_rectangle_shape"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:layout_below="@id/id_layout_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Account"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textColor="#FF2453C2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/round_rectangle_shape_white"
            />

        <Button
            android:layout_below="@id/id_layout_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link New Account"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:textColor="#FF2453C2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/round_rectangle_shape_white"
            />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:background="@color/bg_gray">

    <ImageView
        android:id="@+id/idMyImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/home_icon" />

    <LinearLayout
        android:id="@+id/idLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/idMyImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idMyTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/idMyDescView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_description" />

    </LinearLayout>

    <Switch
        android:id="@+id/idMySwitchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/idLinearLayout"

        android:thumb="@drawable/round_switch_thumb"
        android:track="@drawable/round_switch_track"
        />

    <View
        style="@style/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/idMyImageView"
        android:layout_toEndOf="@id/idMyImageView"
        />

</RelativeLayout>
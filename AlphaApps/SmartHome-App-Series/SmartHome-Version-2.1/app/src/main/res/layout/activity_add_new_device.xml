<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    tools:context=".DeviceAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/id_update_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Device Name" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/id_update_device_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Device IP" />
            </android.support.design.widget.TextInputLayout>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/id_update_relay_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_update_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Device Location" />
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/id_relay_state_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:text="Switch" />

        <Button
            android:id="@+id/id_btn_add_new_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddNewDevice_btnClick"
            android:text="Save Device" />

        <Button
            android:id="@+id/id_btn_go_to_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddNewDevice_btnClick"
            android:text="@android:string/cancel" />
    </LinearLayout>
</android.support.v7.widget.CardView>
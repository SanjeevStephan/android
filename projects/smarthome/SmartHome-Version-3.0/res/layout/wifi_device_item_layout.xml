<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_device_model_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/light_bulb_off"
            android:layout_alignParentStart="true"
            />


        <TextView
            android:id="@+id/id_device_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_device_name"
            android:layout_toEndOf="@id/id_device_model_image"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
        <Switch
            android:id="@+id/id_device_model_state"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@id/id_device_model_name"
            android:layout_alignParentEnd="true"

            />

        <View
            android:id="@+id/id_device_model_divider"
            style="@style/divider"
            android:layout_below="@id/id_device_model_name"
            android:layout_toEndOf="@id/id_device_model_image"
            />

        <TextView
            android:id="@+id/id_device_model_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_device_location"
            android:layout_below="@id/id_device_model_divider"
            android:layout_toEndOf="@id/id_device_model_image"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/id_device_model_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_device_status"
            android:textSize="15dp"
            android:layout_toEndOf="@id/id_device_model_image"
            android:layout_below="@id/id_device_model_location"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
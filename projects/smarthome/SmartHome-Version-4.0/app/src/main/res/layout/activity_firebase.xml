<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MyFirebase.FirebaseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name: " />
        <EditText
            android:id="@+id/id_device_name_edit_firebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_device_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address: " />
        <EditText
            android:id="@+id/id_ip_address_edit_firebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_ip_address"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relay Number: " />
        <EditText
            android:id="@+id/id_relay_edit_firebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_relay"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/id_device_state_firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingRight="30dp"
            android:text="Device State" />
    </LinearLayout>

    <Button
        android:id="@+id/id_save_firebase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        />


</LinearLayout>
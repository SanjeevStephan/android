            <TextView
                android:id="@+id/id_edit_activity_device_location_parent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_toEndOf="@id/dont_use_this_id_9"
                android:layout_toRightOf="@id/dont_use_this_id_9"
                android:text="@string/edit_title_text_view_device_location"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/id_edit_activity_device_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_left"
                android:layout_toEndOf="@id/dont_use_this_id_9"
                android:layout_toRightOf="@id/dont_use_this_id_9"
                android:layout_below="@id/id_edit_activity_device_location_parent_title"
                />
            <ImageView
                android:layout_width="@dimen/activity_edit_relative_item_pen_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_pen_image_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit_gray_24dp"
                />
            <View
                android:id="@+id/dont_use_this_divier_id_5"
                style="@style/divider"
                android:layout_marginTop="@dimen/activity_edit_relative_item_divider_view_margin_top"
                android:layout_below="@id/id_edit_activity_device_location"
                android:layout_toEndOf="@id/dont_use_this_id_9"
                android:layout_toRightOf="@id/dont_use_this_id_9"
                />


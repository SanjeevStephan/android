                android:layout_toEndOf="@id/dont_use_this_id_3"
                android:layout_toRightOf="@id/dont_use_this_id_3"
                />

        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/id_edit_activity_device_relay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_edit_relative_item_margin_left"
        android:layout_marginRight="@dimen/activity_edit_relative_item_margin_right"
        android:layout_marginTop="@dimen/activity_edit_relative_item_margin_top">


        <ImageView
            android:id="@+id/dont_use_this_id_7"
            android:layout_width="@dimen/activity_edit_relative_item_image_width"
            android:layout_height="@dimen/activity_edit_relative_item_image_height"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_google_home"
            />

            <TextView
                android:id="@+id/id_edit_activity_device_relay_parent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_toEndOf="@id/dont_use_this_id_7"
                android:layout_toRightOf="@id/dont_use_this_id_7"
                android:text="@string/edit_title_text_view_device_relay"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="16dp" />
        <TextView
            android:id="@+id/id_edit_activity_device_relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
            android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_left"
            android:layout_toEndOf="@id/dont_use_this_id_7"
            android:layout_toRightOf="@id/dont_use_this_id_7"
            android:layout_below="@id/id_edit_activity_device_relay_parent_title"
            />
        <ImageView
            android:layout_width="@dimen/activity_edit_relative_item_pen_image_width"
            android:layout_height="@dimen/activity_edit_relative_item_pen_image_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <include
        android:id="@+id/id_edit_activity_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/id_fragment_container_edit_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/activity_edit_image_width"
                android:layout_height="@dimen/activity_edit_image_height"
                android:layout_margin="@dimen/activity_edit_image_margin"
                android:src="@drawable/app_logo_smart_home_big"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_edit_activity_device_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_edit_relative_item_margin_left"
            android:layout_marginRight="@dimen/activity_edit_relative_item_margin_right"
            android:layout_marginTop="@dimen/activity_edit_relative_item_margin_top">
            <ImageView
                android:id="@+id/dont_use_this_id_1"
                android:layout_width="@dimen/activity_edit_relative_item_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_image_height"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_google_home"
                />

            <TextView
                android:id="@+id/id_edit_activity_device_name_parent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_toEndOf="@id/dont_use_this_id_1"
                android:layout_toRightOf="@id/dont_use_this_id_1"
                android:text="@string/edit_title_text_view_device_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/activity_edit_relative_item_title_text_size" />
            <TextView
                android:id="@+id/id_edit_activity_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_left"
                android:layout_toEndOf="@id/dont_use_this_id_1"
                android:layout_toRightOf="@id/dont_use_this_id_1"
                android:layout_below="@id/id_edit_activity_device_name_parent_title"
                />
            <ImageView
                android:layout_width="@dimen/activity_edit_relative_item_pen_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_pen_image_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit_gray_24dp"
                />
            <View
                android:id="@+id/dont_use_this_divier_id_1"
                style="@style/divider"
                android:layout_marginTop="@dimen/activity_edit_relative_item_divider_view_margin_top"
                android:layout_below="@id/id_edit_activity_device_name"
                android:layout_toEndOf="@id/dont_use_this_id_1"
                android:layout_toRightOf="@id/dont_use_this_id_1"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_edit_activity_device_ip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_edit_relative_item_margin_left"
            android:layout_marginRight="@dimen/activity_edit_relative_item_margin_right"
            android:layout_marginTop="@dimen/activity_edit_relative_item_margin_top">
            <ImageView
                android:id="@+id/dont_use_this_id_5"
                android:layout_width="@dimen/activity_edit_relative_item_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_image_height"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_google_home"
                />

            <TextView
                android:id="@+id/dont_use_this_id_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_toEndOf="@id/dont_use_this_id_5"
                android:layout_toRightOf="@id/dont_use_this_id_5"
                android:text="@string/edit_title_text_view_device_ip"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/activity_edit_relative_item_title_text_size" />
            <TextView
                android:id="@+id/id_edit_activity_device_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:layout_marginStart="@dimen/activity_edit_relative_item_title_margin_start"
                android:layout_marginLeft="@dimen/activity_edit_relative_item_title_margin_left"
                android:layout_toEndOf="@id/dont_use_this_id_5"
                android:layout_toRightOf="@id/dont_use_this_id_5"
                android:layout_below="@id/dont_use_this_id_6"
                />
            <ImageView
                android:layout_width="@dimen/activity_edit_relative_item_pen_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_pen_image_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit_gray_24dp"
                />
            <View
                android:id="@+id/dont_use_this_divier_id_3"
                style="@style/divider"
                android:layout_marginTop="@dimen/activity_edit_relative_item_divider_view_margin_top"
                android:layout_below="@id/id_edit_activity_device_ip"
                android:layout_toEndOf="@id/dont_use_this_id_5"
                android:layout_toRightOf="@id/dont_use_this_id_5"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_edit_activity_device_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_edit_relative_item_margin_left"
            android:layout_marginRight="@dimen/activity_edit_relative_item_margin_right"
            android:layout_marginTop="@dimen/activity_edit_relative_item_margin_top">
            <ImageView
                android:id="@+id/dont_use_this_id_3"
                android:layout_width="@dimen/activity_edit_relative_item_image_width"
                android:layout_height="@dimen/activity_edit_relative_item_image_height"
